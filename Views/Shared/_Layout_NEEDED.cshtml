

@using System;
@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebGame</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <base href="/">

</head>

<body>
    <div class="menu_space">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

        <nav class="menu">
            <input type="checkbox" href="#" class="menu-open" name="menu-open" id="menu-open" />
            <label class="menu-open-button" for="menu-open">
                <span class="hamburger hamburger-1"></span>
                <span class="hamburger hamburger-2"></span>
                <span class="hamburger hamburger-3"></span>
            </label>

            <a asp-area="" asp-route-AccountId="@Convert.ToInt32(User.FindFirstValue(ClaimTypes.NameIdentifier))" asp-controller="Game" asp-action="Profile" class="menu-item "> <i class="fa fa-user profilePic"></i> </a>
            <a asp-area="" asp-controller="Game" asp-action="SelectGame" class="menu-item"> <i class="fa fa-globe world"></i> </a>
            <a asp-area="" asp-controller="Game" asp-action="NewGame" class="menu-item"> <i class="fa fa-play findGame"></i> </a>
            <a asp-controller="Game" asp-action="Tutorial" class="menu-item "> <i class="fa fa-info information"></i> </a>

            @{
                if (User.Identity.Name.Length > 5)
                {

                    string name = @User.Identity.Name.Substring(0, 5) + "...";
                    <a class="menu-logout " asp-controller="Account" asp-action="Logout">@name Log out </a>

                }
                else
                {
                    <a class="menu-logout " asp-controller="Account" asp-action="Logout"> @User.Identity.Name Logout </a>

                }
            }

        </nav>
    </div>




    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script src="_framework/blazor.server.js"></script>

</body>
</html>

<style>


    .webgame {
        padding-left: 40px;
    }

    header {
        position: fixed;
        width: 100%;
        height: 10%;
        z-index: 1;
        /*        left: -8%;
                   */ bottom: 90%;
    }

    .spacer {
        width: 100%;
        height: 100px;
    }

    .queue {
        text-align: center;
        margin-left: 25%;
        margin-right: 20%;
        left: 10%;
        right: 0%;
        display: inline-block;
        top: 25px;
    }

    @@media (max-width:960px) {
        .queue {
            font-size: 25px;
        }
    }

    </ >
    <script >
    window.onscroll = function () {
        myFunction()
    }

    ;

    var header = document.getElementById("myHeader");
    var sticky = header.offsetTop;

    function myFunction() {
        if (window.pageYOffset > sticky)

    {
        header .classList.add("sticky");
    }

    else {
        header .classList.remove("sticky");
    }

    }
    </script >
