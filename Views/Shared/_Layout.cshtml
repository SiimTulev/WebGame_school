
@using System;
@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebGame</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="header" id="myHeader" id="fixed-menu">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebGame</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" /> @*Osa teisest HTML failist*@
                    <ul class="navbar-nav flex-grow-1">
                        
                        @if (User.Identity.IsAuthenticated) // If account is logged in
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary nav-link text-white" asp-area="" asp-route-AccountId="@Convert.ToInt32(User.FindFirstValue(ClaimTypes.NameIdentifier))" asp-controller="Game" asp-action="Profile">Profile</a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-info nav-link text-white" asp-area="" asp-controller="Game" asp-action="SelectGame">World selection</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-success nav-link text-white" asp-area="" asp-controller="Game" asp-action="NewGame">Find game</a>
                            </li>

                            <a class="btn btn-danger nav-link text-white" asp-controller="Account" asp-action="Logout">(@User.Identity.Name) Logout</a>

                            <a class="btn btn-outline-secondary" asp-controller="Game" asp-action="Tutorial">Tutorial</a>
                        }
                        else
                        {
                            <a class="btn btn-success nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-info nav-link text-white" asp-controller="Account" asp-action="Register">Register</a>
                        }
                    </ul>

                </div>

            </div>

        </nav>
        @{
            if (ViewData["Queue"] != null)
            {
                <h1 style=" padding: 0px;" class="queue alert alert-danger">@ViewData["Queue"]</h1>
            }
        }

    </header>
    <div class="spacer">
        &nbsp;
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2019 - WebGame - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

<style>



        header {
            position: fixed;
            width: 100%;
            height: 10%;
            z-index: 1;
            left: 10%;
            bottom: 90%;
        }

        .spacer {
            width: 100%;
            height: 100px;
        }

        .queue {
            text-align: center;
            margin-left: 25%;
            margin-right: 20%;
            left: 10%;
            right: 0%;
            display: inline-block;
            top: 25px;
        }

        @@media (max-width:960px) {
            .queue {
                font-size:25px;
            }
        }




